<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarDet"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#3aa8c1"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Service Details"
                android:textSize="30sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request time"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:id="@+id/reqTime"
                android:textSize="16sp"
                android:theme="@style/DetailsTheme"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Rating"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:id="@+id/userRating"
                android:textSize="16sp"
                android:theme="@style/DetailsTheme"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price of Service"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:id="@+id/priceSer"
                android:textSize="16sp"
                android:theme="@style/DetailsTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Fee (10%)"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:id="@+id/serFee"
                android:textSize="16sp"
                android:theme="@style/DetailsTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tip"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="None"
                android:textSize="16sp"
                android:theme="@style/DetailsTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:id="@+id/dist"
                android:textSize="16sp"
                android:theme="@style/DetailsTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items list"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:id="@+id/itemsList"
                android:textSize="16sp"
                android:theme="@style/DetailsTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Range of Price"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>
            <EditText
                android:id="@+id/changePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:hint="New Price"
                android:textColor="#000"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send comment"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>
            <EditText
                android:id="@+id/leaveComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:hint="Leave Comment"
                android:textColor="#000"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:inputType="textPersonName" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_box"
                android:layout_gravity="center_horizontal"
                android:text="Accept"
                android:id="@+id/acceptButton"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>