<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/backgroundd"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_short"
                android:gravity="center"
                android:padding="@dimen/margin_short"
                android:text="  Welcome to Dalavere"

                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_short"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/margin_short"
                android:weightSum="2">

                <Button
                    android:id="@+id/signup_button"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/margin_short"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_box"
                    android:text="Sign up"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_default"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_short">

            <EditText
                android:id="@+id/usernameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:drawableLeft="@drawable/ic_action_user"
                android:hint="Username"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/passwordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"

                android:drawableLeft="@drawable/ic_action_pass"
                android:hint="Password"
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_short"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_short"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_box"
                    android:text="Login"
                    android:id="@+id/login_button"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/forgot_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_short"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:text="    Forgot password ?"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />




            </LinearLayout>


            <ImageView
                android:id="@+id/fingerprintImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_short"
                android:drawablePadding="10dp"
                app:srcCompat="@mipmap/fingerprint" />

            <TextView
                android:id="@+id/paraLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fingerprint Authentication" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

