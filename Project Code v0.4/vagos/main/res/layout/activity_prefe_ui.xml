<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preferences for shown orders"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_horizontal"
                android:textSize="27sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose distance range"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>
            <TextView
                android:id="@+id/bar_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scroll_bar"
                android:gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="0m"
                android:textSize="30sp" android:theme="@style/DetailsTheme"/>

            <SeekBar
                android:id="@+id/scroll_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose price range"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>
            <TextView
                android:id="@+id/bar_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scroll_bar"
                android:gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="0$"
                android:textSize="30sp" android:theme="@style/DetailsTheme"/>

            <SeekBar
                android:id="@+id/scroll_bar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preferences for shown deliverers"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_horizontal"
            android:textSize="27sp"
            android:textStyle="bold"
            android:theme="@style/DetailsTheme"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose distance range"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:theme="@style/DetailsTheme"/>
        <TextView
            android:id="@+id/bar_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scroll_bar"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="0m"
            android:textSize="30sp" android:theme="@style/DetailsTheme"/>

        <SeekBar
            android:id="@+id/scroll_bar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose price range"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:theme="@style/DetailsTheme"/>
        <TextView
            android:id="@+id/bar_text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scroll_bar"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="0$"
            android:textSize="30sp" android:theme="@style/DetailsTheme"/>

        <SeekBar
            android:id="@+id/scroll_bar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="50dp">
            <Button
                android:id="@+id/apply_pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/accept_button"
                android:text="apply">
            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="             "/>

            <Button
                android:id="@+id/cancel_pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/decline_button"
                android:text="cancel">
            </Button>
        </LinearLayout>
        </LinearLayout>



</ScrollView>

