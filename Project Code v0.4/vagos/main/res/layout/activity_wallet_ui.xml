<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Wallet"
            android:textSize="30sp"
            android:textStyle="bold"
            android:theme="@style/DetailsTheme"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="linked card"
                android:textSize="30sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  xxxxxxxxxxxxxxxx"
                android:drawableLeft="@drawable/card"
                android:theme="@style/DetailsTheme" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/amount"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textStyle="bold"
            android:theme="@style/DetailsTheme" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="50dp">
            <Button
                android:id="@+id/charge_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/accept_button"
                android:text="charge">
            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="             "/>

            <Button
                android:id="@+id/uncharge_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/decline_button"
                android:text="uncharge">
            </Button>
        </LinearLayout>
    </LinearLayout>



</ScrollView>

