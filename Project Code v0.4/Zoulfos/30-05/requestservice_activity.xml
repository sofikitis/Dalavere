<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarDet"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#3aa8c1"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Order"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items to be Delivered"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>
            <EditText
                android:id="@+id/itemsCO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:hint="New Price"
                android:textColor="#000"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>
            <EditText
                android:id="@+id/commentCO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:hint="Leave Comment"
                android:textColor="#000"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estimated Cost"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>
            <EditText
                android:id="@+id/costCO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:hint="Leave Comment"
                android:textColor="#000"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time to Deliver"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/DetailsTheme"/>
            <EditText
                android:id="@+id/timeCO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:hint="Leave Comment"
                android:textColor="#000"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:inputType="textPersonName" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_box"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="Create"
                android:id="@+id/createOrderButton"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>